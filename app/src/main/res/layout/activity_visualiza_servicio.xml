<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jhorje18.popjobs.VisualizaServicioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/LabNombreServicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del servicio"
                android:textAlignment="center"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/IdImage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aqui saldra la descripcion"
                android:textAlignment="center"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPecio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Precio"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/LabePVP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PVP"
                    android:textAlignment="center"
                    android:textSize="30sp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/FraMapa"
                android:layout_width="match_parent"
                android:layout_height="250dp">

            </FrameLayout>

            <TextView
                android:id="@+id/TxtNombreFecha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Fecha"
                android:textAlignment="center"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enviar un mensaje"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btnPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Visitar Perfil" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
